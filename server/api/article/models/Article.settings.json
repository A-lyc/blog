{
  "connection": "default",
  "collectionName": "article",
  "info": {
    "name": "article",
    "description": "文章"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "default": "",
      "unique": true,
      "type": "string",
      "required": true
    },
    "description": {
      "default": "",
      "type": "text"
    },
    "weight": {
      "default": 0,
      "type": "integer"
    },
    "content": {
      "type": "richtext"
    },
    "category": {
      "model": "category",
      "via": "articles"
    }
  }
}